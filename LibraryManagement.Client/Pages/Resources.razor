@page "/resources"
@using LibraryManagement.Client.Components



@if (imageEditorVisible)
{
    <ImageEditor 
        ImageUrl=@imageUrl 
        OnImageSaved="(string dataUrl) => {HandleSave(dataUrl); HideImageEditor();}"
        OnCancel="HideImageEditor">
    </ImageEditor>
}

<img src="/images/FELogo.png" @onclick='() => ShowImageEditor("images/FELogo.png")'/>


@code {
    private string imageUrl = "";
    private bool imageEditorVisible = false;

    private void ShowImageEditor(string url)
    {
        imageUrl = url;
        imageEditorVisible = true;
    }

    private void HideImageEditor()
    {
        imageEditorVisible = false;
    }

    private void HandleSave(string dataUrl)
  {
    Console.WriteLine($"Saved: {dataUrl}");
  }
}
