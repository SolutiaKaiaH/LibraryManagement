@using Syncfusion.Blazor.Navigations

<div class="control-section">
    <div class="menu-control">
        <SfMenu CssClass="top-menu" Items="@MenuItems"></SfMenu>
    </div>
</div>

@code {
    private List<MenuItem> MenuItems { get; } = new List<MenuItem>
    {
        new MenuItem { Id = "books", Text = "Books", IconCss = "bi bi-book" },
        new MenuItem { Id = "readingLog", Text = "Reading Log" },
        new MenuItem { Id = "wantToRead", Text = "Want to Read" },
        new MenuItem { Id = "allBooks", Text = "All Books", ParentId = "books" },
        new MenuItem { Id = "currentlyReading", Text = "Currently Reading", ParentId = "books" },
        new MenuItem { Id = "didNotFinish", Text = "Did Not Finish", ParentId = "books" },
        new MenuItem { Id = "completedBooks", Text = "Completed Books", ParentId = "books" }
    };
    private class MenuItem
    {
        public string Text { get; set; }
        public string Id { get; set; }
        public string ParentId { get; set; }
        public string? IconCss {get;set;}
    }
}
